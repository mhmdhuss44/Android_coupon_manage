<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground"
    tools:context=".EditUserActivityForCustomerFrag">

    <TextView
        android:id="@+id/userEdit_tvId"
        android:layout_width="247dp"
        android:layout_height="53dp"
        android:layout_marginTop="48dp"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="@color/material_dynamic_neutral_variant90"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/userEdit_textView"
        app:layout_constraintStart_toStartOf="@+id/userEdit_textView"
        app:layout_constraintTop_toBottomOf="@+id/userEdit_textView" />

    <TextView
        android:id="@+id/userEdit_textView"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:elegantTextHeight="true"
        android:fontFamily="cursive"
        android:shadowColor="#B95BFE"
        android:shadowDx="12"
        android:shadowDy="12"
        android:shadowRadius="8"
        android:text="Edit Customer !"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/material_dynamic_neutral_variant20"
        android:textIsSelectable="true"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066" />


    <ImageButton
        android:id="@+id/userEdit_btnSave"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="56dp"
        android:layout_weight="1"
        android:background="@drawable/cancel"
        android:scaleType="fitCenter"
        android:src="@drawable/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/userEdit_btnCancel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        app:layout_constraintVertical_bias="0.441" />

    <ImageButton
        android:id="@+id/userEdit_btnCancel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/baseline_radio_button_checked_24"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/userEdit_btnSave"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/cancel" />

    <EditText
        android:id="@+id/userEdit_etlName"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="@color/material_dynamic_neutral_variant90"
        android:ems="10"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/userEdit_etfName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/userEdit_etfName"
        app:layout_constraintTop_toTopOf="@+id/userEdit_etfName"
        app:layout_constraintVertical_bias="0.0" />


    <EditText
        android:id="@+id/userEdit_etfName"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:layout_marginTop="37dp"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="@color/material_dynamic_neutral_variant90"
        android:ems="10"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/userEdit_textView"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userEdit_tvId" />


    <EditText
        android:id="@+id/userEdit_etUserName"
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="@color/material_dynamic_neutral_variant90"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userEdit_etfName" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="355dp"
        android:layout_height="65dp"
        android:layout_marginTop="25dp"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="@color/material_dynamic_neutral_variant90"
        android:hint="Enter Password..."
        app:layout_constraintEnd_toEndOf="@+id/userEdit_etUserName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/userEdit_etUserName"
        app:layout_constraintTop_toBottomOf="@+id/userEdit_etUserName"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/userEdit_etPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:ems="20"
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="2dp"
        android:text="ID:"
        android:gravity="bottom"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/userEdit_tvId"
        app:layout_constraintEnd_toEndOf="@+id/userEdit_tvId"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/userEdit_tvId"
        app:layout_constraintTop_toBottomOf="@+id/userEdit_textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:text="First Name:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="bottom"
        app:layout_constraintEnd_toEndOf="@+id/userEdit_etfName"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@+id/userEdit_etfName"
        app:layout_constraintTop_toBottomOf="@+id/userEdit_tvId" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="Last Name:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="bottom"
        app:layout_constraintBottom_toTopOf="@+id/userEdit_etlName"
        app:layout_constraintEnd_toEndOf="@+id/userEdit_etlName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/userEdit_etlName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="Email:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="bottom"
        app:layout_constraintBottom_toTopOf="@+id/userEdit_etUserName"
        app:layout_constraintEnd_toEndOf="@+id/userEdit_etUserName"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toStartOf="@+id/userEdit_etUserName" />

</androidx.constraintlayout.widget.ConstraintLayout>