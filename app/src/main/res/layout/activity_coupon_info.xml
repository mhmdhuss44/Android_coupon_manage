<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground_comp"
    tools:context=".CouponInfoActivity">

    <TextView
        android:id="@+id/couponInfo_tvDescription"
        android:layout_width="353dp"
        android:layout_height="75dp"
        android:background="#FFFCFC"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView18"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView18"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <TextView
        android:id="@+id/couponInfo_tvStartDate"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:background="#FFFCFC"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView16"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/couponInfo_tvAmount"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="2dp"
        android:background="#FFFCFC"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textView15"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/couponInfo_tvPrice"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:background="#FFFCFC"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView14"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/couponInfo_tvEndDate"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:background="#FFFCFC"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView17"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <TextView
        android:id="@+id/couponInfo_tvCategory"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:background="#FFFCFC"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/couponInfo_tvComp"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:background="#FFFCFC"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:gravity="bottom"
        android:text="Company:"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/couponInfo_textView3"
        app:layout_constraintHorizontal_bias="0.874"
        app:layout_constraintStart_toStartOf="@+id/couponInfo_textView3"
        app:layout_constraintTop_toBottomOf="@+id/couponInfo_textView3" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:gravity="bottom"
        android:text="Coupon ID:"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/couponInfo_textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/couponInfo_textView3"
        app:layout_constraintTop_toBottomOf="@+id/couponInfo_textView3" />

    <ImageView
        android:id="@+id/couponInfo_IVimage"
        android:layout_width="258dp"
        android:layout_height="157dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="90dp"
        android:background="@android:drawable/picture_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/couponInfo_tvDescription" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:gravity="bottom"
        android:text="Amount:"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/couponInfo_tvCategory"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/couponInfo_tvCategory"
        app:layout_constraintTop_toBottomOf="@+id/couponInfo_tvCategory" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:gravity="bottom"
        android:text="Price:"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/couponInfo_tvTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/couponInfo_tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/couponInfo_tvTitle" />

    <TextView
        android:id="@+id/couponInfo_tvTitle"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:background="#FFFCFC"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/couponInfo_textView3"
        android:layout_width="351dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:elegantTextHeight="true"
        android:fontFamily="cursive"
        android:shadowColor="#E2E7E7"
        android:shadowDx="12"
        android:shadowDy="12"
        android:shadowRadius="8"
        android:text="Coupon Info"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textIsSelectable="true"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:gravity="bottom"
        android:text="Description:"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/couponInfo_tvStartDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/couponInfo_tvStartDate" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:gravity="bottom"
        android:text="Title:"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/couponInfo_tvCoupId"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/couponInfo_tvCoupId"
        app:layout_constraintTop_toBottomOf="@+id/couponInfo_tvCoupId" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:gravity="bottom"
        android:text="Category:"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/couponInfo_tvComp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/couponInfo_tvComp"
        app:layout_constraintTop_toBottomOf="@+id/couponInfo_tvComp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:gravity="bottom"
        android:text="Start Date:"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/couponInfo_tvPrice"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/couponInfo_tvPrice"
        app:layout_constraintTop_toBottomOf="@+id/couponInfo_tvPrice" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:gravity="bottom"
        android:text="End date:"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/couponInfo_tvAmount"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/couponInfo_tvAmount"
        app:layout_constraintTop_toBottomOf="@+id/couponInfo_tvAmount" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/couponInfo_btnReturn"
        android:layout_width="410dp"
        android:layout_height="60dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="151dp"
        android:background="#FE9693"
        android:text="Return"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/couponInfo_IVimage" />

    <TextView
        android:id="@+id/couponInfo_tvCoupId"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:background="#FFFCFC"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textView12"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

</androidx.constraintlayout.widget.ConstraintLayout>