<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@android:drawable/editbox_background_normal"
    android:backgroundTint="@color/levender"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="79dp"
        android:layout_height="81dp"
        android:layout_marginBottom="16dp"
        android:background="?attr/actionModeSelectAllDrawable"
        android:backgroundTint="#6574F6"
        android:translationX="-8dp"
        android:translationY="35dp"

        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/nav_header_name_tv"
        android:layout_width="209dp"
        android:layout_height="31dp"
        android:layout_marginBottom="16dp"
        android:text="Admin"
        android:textColor="@color/purble_500"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:translationY="15dp" />

    <TextView
        android:id="@+id/nav_header_mail_tv"
        android:layout_width="360dp"
        android:layout_height="30dp"
        android:layout_marginBottom="16dp"
        android:text="admin@admin.com"
        android:textColor="@color/purble_500"
        android:textSize="16sp"
        android:textStyle="bold|italic" />
</LinearLayout>