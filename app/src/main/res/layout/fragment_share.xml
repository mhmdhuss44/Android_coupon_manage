<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@drawable/coupons_bg">

    <!-- Share Icon -->
    <ImageView
        android:layout_width="411dp"
        android:layout_height="143dp"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:src="@drawable/shareit" />

    <!-- Share Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share with Friends"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#333333"
        android:layout_marginBottom="32dp" />

    <!-- Share Button -->
    <Button
        android:id="@+id/shareButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#0AB8FE"
        android:padding="16dp"
        android:text="Share"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Share Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/shareViaSMSButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#F84161"
            android:padding="16dp"
            android:text="Share via SMS"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/shareViaEmailButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FEC507"
            android:padding="16dp"
            android:text="Share via Email"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>
